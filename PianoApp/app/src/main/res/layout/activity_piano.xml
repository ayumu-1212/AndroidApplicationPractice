                                android:id="@+id/piano2_ra_pound"
                                android:layout_width="60dp"
                                android:layout_height="200dp"
                                android:layout_marginLeft="1010dp"
                                android:background="#000"
                                android:text=""
                                android:textStyle="bold" />
                            <Button
                                android:id="@+id/piano3_do_pound"
                                android:layout_width="60dp"
                                android:layout_height="200dp"
                                android:layout_marginLeft="1170dp"
                                android:background="#000"
                                android:text="" />

                            <Button
                                android:id="@+id/piano3_re_pound"
                                android:layout_width="60dp"
                                android:layout_height="200dp"
                                android:layout_marginLeft="1250dp"
                                android:background="#000"
                                android:text="" />
                        </RelativeLayout>
                    </FrameLayout>
                </LinearLayout>
            </HorizontalScrollView>
        </LinearLayout>
    </RelativeLayout>



</androidx.constraintlayout.widget.ConstraintLayout>